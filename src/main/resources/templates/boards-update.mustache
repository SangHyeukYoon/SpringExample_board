{{>layout/header}}

<h1 class="text-center">게시글 수정</h1>

<div class="container square-box">
    <div class="col-md-8">
        <form>
            <div class="form-group">
                <label for="title">글번호</label>
                <input type="text" class="form-control" id="id"value="{{board.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{board.title}}">
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{board.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content">{{board.content}}</textarea>
            </div>
        </form>
        {{#board.filePath}}
            <div class="container">
            <div class="row">
                <div class="col-lg">
                    <img src={{.}} class="img-fluid"> 
                </div>

                <div class="col-sm">
                    <button type="button" class="btn btn-danger" name="btn-del-img" value={{.}}>X</button>
                </div>
            </div>
            </div>
        {{/board.filePath}}
    </div>

    <div class="p-2 col-md-8">
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}